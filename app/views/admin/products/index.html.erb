<h2>商品列表</h2>

<%= link_to "添加商品", new_admin_product_path, class: "btn btn-primary pull-right" %>

<table class="table">
  <thead>
    <tr>
      <th>title</th>
      <th>price</th>
      <th>quantity</th>
      <th>opertation</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product|  %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td>
          <%= link_to "Edit", edit_admin_product_path(product) %>|
          <%= link_to "Destroy", admin_product_path(product), method: :delete,
                data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
